<Window x:Class="MindeeAPI_OCR.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindeeAPI_OCR.Views"
        mc:Ignorable="d"
        Title="Processing" Height="180" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow" ShowInTaskbar="False" Background="#FFF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="statusText" Text="Please wait while processing..." Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#333"/>

        <ProgressBar Grid.Row="1" Margin="10" Height="25" IsIndeterminate="True" Foreground="#18A0FB"/>
    </Grid>
</Window>
